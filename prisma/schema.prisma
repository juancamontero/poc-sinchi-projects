model Departamento {
  id      Int       @id @default(autoincrement())
  cod     String
  name    String    @unique
  Project Project[]
}

model Tag {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Project Project[]
}

model Convenio {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Project Project[]
}
